<% if (site.data.links && site.data.links.length > 0) { %>
<div class="friends-container">
  <% site.data.links.forEach(function(link) { %>
    <div class="friend-card">
      <a href="<%= link.url %>" target="_blank" rel="noopener noreferrer">
        <div class="friend-avatar">
          <% if (link.avatar) { %>
            <img src="<%= link.avatar %>" alt="<%= link.name %>">
          <% } else { %>
            <div class="default-avatar"><%= link.name.charAt(0) %></div>
          <% } %>
        </div>
        <div class="friend-info">
          <h3 class="friend-name"><%= link.name %></h3>
          <% if (link.desc) { %>
            <p class="friend-desc"><%= link.desc %></p>
          <% } %>
        </div>
      </a>
    </div>
  <% }); %>
</div>
<% } else { %>
  <p>暂无友链数据</p>
<% } %>

<style>
.friends-container {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
  padding: 20px 0;
}

.friend-card {
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  overflow: hidden;
  transition: all 0.3s ease;
  background: #fff;
}

.friend-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
}

.friend-card a {
  text-decoration: none;
  color: inherit;
  display: block;
}

.friend-avatar {
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
}

.friend-avatar img {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  object-fit: cover;
}

.default-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background-color: #3f51b5;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32px;
  font-weight: bold;
}

.friend-info {
  padding: 16px;
  text-align: center;
}

.friend-name {
  margin: 0 0 8px 0;
  font-size: 18px;
  font-weight: 500;
}

.friend-desc {
  margin: 0;
  font-size: 14px;
  color: #666;
  line-height: 1.4;
}
</style>