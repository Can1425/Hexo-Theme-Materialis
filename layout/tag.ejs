<style>
.tags-simple {
    max-width: 1000px;
    margin: 0 auto;
    padding: 20px;
}

.tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
}

.simple-chip {
    --mdui-chip-height: 32px;
    --mdui-chip-container-color: var(--mdui-color-primary-container);
    --mdui-chip-label-text-color: var(--mdui-color-on-primary-container);
    transition: all 0.2s ease;
}

.simple-chip:hover {
    transform: translateY(-1px);
    --mdui-chip-container-color: var(--mdui-color-primary);
    --mdui-chip-label-text-color: var(--mdui-color-on-primary);
}
</style>

<div class="tags-simple">
    <div class="tags-container">
        <% site.tags.sort('name').each(function(tag) { %>
            <mdui-chip 
                class="simple-chip"
                href="<%- url_for(tag.path) %>"
            >
                <%= tag.name %>
                <mdui-badge slot="end"><%= tag.length %></mdui-badge>
            </mdui-chip>
        <% }); %>
    </div>
</div>