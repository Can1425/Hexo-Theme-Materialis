<div style="padding: 0 5%;">
    <!-- 第一行：个人信息 -->
    <mdui-card style="width: 100%; height: 50%;">
        <mdui-card-content style="
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            align-items: stretch;
            min-height: 300px;
        ">
            <!-- 左侧：头像和基本信息 -->
            <div style="width: 100%;">
                <mdui-card style="width: 100%; height: 100%; border: none;">
                    <mdui-card-content style="
                        padding: 2rem 1.5rem;
                        height: 100%;
                        display: flex;
                        flex-direction: column;
                        justify-content: center;
                        align-items: center;
                        text-align: center;
                    ">
                        <div class="avatar-container">
                            <% if (site.data.about.img) { %>
                                <img 
                                    src="<%= site.data.about.img %>" 
                                    alt="<%= config.author %>的头像" 
                                    class="avatar-image"
                                >
                            <% } else { %>
                                <div class="avatar-placeholder">
                                    <mdui-icon name="person"></mdui-icon>
                                </div>
                            <% } %>
                        </div>
                        
                        <div class="user-info">
                            <mdui-typography variant="h5" class="username">
                                <%= config.author || '用户名' %>
                            </mdui-typography>
                            
                            <% if (site.data.about.bio) { %>
                                <mdui-typography variant="body1" class="user-bio">
                                    <%= site.data.about.bio %>
                                </mdui-typography>
                            <% } %>
                            
                            <!-- 标签 -->
                            <% if (site.data.about.tags) { %>
                                <div style="display: flex; flex-wrap: wrap; gap: 8px; justify-content: center; margin-top: 1rem;">
                                    <% site.data.about.tags.forEach(function(tag) { %>
                                        <mdui-chip variant="filled" size="small">
                                            <%= tag %>
                                        </mdui-chip>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </mdui-card-content>
                </mdui-card>
            </div>
            
            <!-- 右侧：个人介绍 -->
            <div style="width: 100%;">
                <mdui-card style="width: 100%; height: 100%; border: none;">
                    <mdui-card-content style="
                        padding: 2rem 1.5rem;
                        height: 100%;
                        display: flex;
                        flex-direction: column;
                        justify-content: center;
                    ">
                        <mdui-typography variant="h6" style="margin-bottom: 1rem; display: flex; align-items: center; gap: 8px;">
                            <mdui-icon name="info"></mdui-icon>
                            关于我
                        </mdui-typography>
                        <mdui-typography variant="body1" style="line-height: 1.6;">
                            <%= site.data.about.talk || '这里可以写一些个人介绍...' %>
                        </mdui-typography>
                    </mdui-card-content>
                </mdui-card>
            </div>
        </mdui-card-content>
    </mdui-card>

    <br>
    <br>
    <br>
    <!-- 第二行：技术栈 + 联系方式 + 统计 -->
    <mdui-card style="width: 100%; height: 50%;">
        <mdui-card-content style="
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            align-items: stretch;
            min-height: 400px;
        ">
            <!-- 左侧：技术栈 -->
            <div style="width: 100%;">
                <mdui-card style="width: 100%; height: 100%; border: none;">
                    <div style="
                        display: grid;
                        grid-template-columns: repeat(3, 1fr);
                        gap: 1rem;
                    ">
                        <% if (site.data.about.icons) { %>
                            <% site.data.about.icons.forEach(function(icon, index) { %>
                                <div style="
                                    aspect-ratio: 1;
                                    background: var(--mdui-color-surface-container-high);
                                    border-radius: 12px;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                ">
                                    <img 
                                        src="<%= icon.svg %>" 
                                        alt="<%= icon.name %>" 
                                        style="width: 48px; height: 48px;"
                                    >
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                </mdui-card>
            </div>
            
            <!-- 右侧：联系方式 + 统计 -->
            <div style="width: 100%;">
                <mdui-card style="width: 100%; height: 100%; border: none;">
                    <mdui-card-content style="
                        padding: 2rem 1.5rem;
                        height: 100%;
                        display: flex;
                        flex-direction: column;
                    ">
                        <!-- 联系方式 -->
                        <div style="margin-bottom: 2rem;">
                            <mdui-typography variant="h6" style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 8px;">
                                <mdui-icon name="link"></mdui-icon>
                                联系方式
                            </mdui-typography>
                            
                            <div style="display: flex; flex-direction: column; gap: 1rem;">
                                <% if (site.data.about.socials) { %>
                                    <% site.data.about.socials.forEach(function(social) { %>
                                        <mdui-button 
                                            variant="outlined" 
                                            href="<%= social.url %>" 
                                            target="_blank" 
                                            style="justify-content: start;"
                                        >
                                            <div style="display: flex; align-items: center; gap: 12px;">
                                                <% if (social.svg) { %>
                                                    <img 
                                                        src="<%= social.svg %>" 
                                                        alt="<%= social.name %>" 
                                                        style="width: 24px; height: 24px;"
                                                    >
                                                <% } else if (social.icon) { %>
                                                    <mdui-icon name="<%= social.icon %>"></mdui-icon>
                                                <% } %>
                                                <%= social.name %>
                                            </div>
                                        </mdui-button>
                                    <% }); %>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- 统计数据 -->
                        <div style="border-top: 1px solid var(--mdui-color-outline-variant); padding-top: 1.5rem;">
                            <mdui-typography variant="h6" style="margin-bottom: 1rem; display: flex; align-items: center; gap: 8px;">
                                <mdui-icon name="analytics"></mdui-icon>
                                数据统计
                            </mdui-typography>
                            
                            <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 1rem;">
                                <div style="text-align: center;">
                                    <mdui-typography variant="h5" style="color: var(--mdui-color-primary);">
                                        <%= site.posts.length %>
                                    </mdui-typography>
                                    <mdui-typography variant="body2" style="font-size: 0.75rem;">文章</mdui-typography>
                                </div>
                                
                                <div style="text-align: center;">
                                    <mdui-typography variant="h5" style="color: var(--mdui-color-primary);">
                                        <%= site.tags.length %>
                                    </mdui-typography>
                                    <mdui-typography variant="body2" style="font-size: 0.75rem;">标签</mdui-typography>
                                </div>
                                
                                <div style="text-align: center;">
                                    <mdui-typography variant="h5" style="color: var(--mdui-color-primary);">
                                        <%= site.categories.length %>
                                    </mdui-typography>
                                    <mdui-typography variant="body2" style="font-size: 0.75rem;">分类</mdui-typography>
                                </div>
                                
                                <div style="text-align: center;">
                                    <mdui-typography variant="h5" style="color: var(--mdui-color-primary);">
                                        <% 
                                            const archiveYears = {};
                                            site.posts.each(function(post) {
                                                const year = post.date.year();
                                                archiveYears[year] = true;
                                            });
                                        %>
                                        <%= Object.keys(archiveYears).length %>
                                    </mdui-typography>
                                    <mdui-typography variant="body2" style="font-size: 0.75rem;">年份</mdui-typography>
                                </div>
                            </div>
                        </div>
                    </mdui-card-content>
                </mdui-card>
            </div>
        </mdui-card-content>
    </mdui-card>
</div>

<style>
.avatar-container {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    margin: 0 auto 1.5rem auto;
    overflow: hidden;
    border: 3px solid var(--mdui-color-primary);
    background: var(--mdui-color-surface-container);
}

.avatar-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.avatar-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--mdui-color-primary-container);
    color: var(--mdui-color-on-primary-container);
}

.avatar-placeholder mdui-icon {
    font-size: 2.5rem;
}

.user-info {
    text-align: center;
}

.username {
    color: var(--mdui-color-on-surface);
    margin-bottom: 0.5rem;
    font-weight: 600;
}

.user-bio {
    color: var(--mdui-color-on-surface-variant);
    line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 768px) {
    div[style*="grid-template-columns: 1fr 1fr"] {
        grid-template-columns: 1fr !important;
    }
    
    .avatar-container {
        width: 80px;
        height: 80px;
        margin-bottom: 1rem;
    }
    
    .avatar-placeholder mdui-icon {
        font-size: 2rem;
    }
}

@media (max-width: 480px) {
    div[style*="padding: 0 5%"] {
        padding: 0 2% !important;
    }
}
</style>